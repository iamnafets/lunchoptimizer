= form_for @lunch do |f|
  -if @lunch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lunch.errors.count, "error")} prohibited this lunch from being saved:"
      %ul
        - @lunch.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :group_id
    = f.text_field :group_id
  .field
    = f.label :restaurant_id
    = f.text_field :restaurant_id
  .field
    = f.label :rsvp_limit
    = f.datetime_select :rsvp_limit
  .actions
    = f.submit 'Save'
